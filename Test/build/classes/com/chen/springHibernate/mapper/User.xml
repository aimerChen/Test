<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 
    "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.springHibernate.mapper">
	<!-- 创建用户 -->
	<insert id="saveUser" parameterType="User" useGeneratedKeys="true"
		keyProperty="id">
		insert into user
		(name,password,salt,birthday,locked,createTime)
		values
		(#{name},
		#{password},
		#{salt},
		#{birthday},
		#{locked},
		now())

	</insert>

	<select id="queryUserByName" parameterType="Map" resultType="User">
		select c.name from user c
		<where> c.name=#{name} </where>
		limit 1;
	</select>
	
	<select id="queryUsersByName" parameterType="Map" resultType="User">
		select * from user u <where>u.name=#{name}</where>
	</select>
	
	<update id="updateUser" parameterType="Map">
		update user set birthday=#{birthday},locked=#{locked} <where> name=#{name} </where>
	</update>
	
	<insert  id="addRoelsForUser" parameterType="Map" useGeneratedKeys="true" keyProperty="id">
		insert into rolesuser(userid,roleid) values(#{userid},#{roleid});
	</insert>
	
	<delete id="deleteUserById" parameterType="java.lang.Integer">
		delete * from user <where> id=#{id}</where>
	</delete>
</mapper>